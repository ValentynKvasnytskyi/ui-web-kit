{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "declaration": true,
    "esModuleInterop": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "tsconfig.json",
    "test"
  ]
}
